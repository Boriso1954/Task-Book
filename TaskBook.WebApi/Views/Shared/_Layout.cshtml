<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskBook Manager</title>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/Content/css")
</head>
<body data-ng-app="TaskBookApp">
     <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" data-ng-controller="layoutController">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">TaskBook</a>
                <!--@Html.ActionLink("SimpleIdentity", "Index", "Home", null, new { @class = "navbar-brand" })-->
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li data-ng-show="authentication.role=='Admin'"><a href="#/projects">Project & Managers</a></li>
                    <li data-ng-show="authentication.role=='Admin'"><a href="#/projects/new">Add Project</a></li>
                    <li data-ng-show="authentication.role=='Manager'"><a href="#/tasks/{{authentication.userName}}">Tasks</a></li>
                    <li data-ng-show="authentication.role=='Manager'"><a href="#/users/{{authentication.userName}}">Users</a></li>
                    <li data-ng-show="authentication.role=='Manager'"><a href="#/tasks/new/{{authentication.userName}}">Add Task</a></li>
                    <li data-ng-show="authentication.role=='Manager'"><a href="#">Add User</a></li>
                    <li data-ng-show="false"><a href="#">Tasks</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!--<li data-ng-show="authentication.isAuth"><a href="#">Welcome {{authentication.userName}}</a></li>-->
                    <li><p data-ng-show="authentication.isAuth" class="navbar-text">Signed in as <a href="#/users/edit/{{authentication.userName}}" class="navbar-link">{{authentication.userName}}</a></p></li>
                    <li data-ng-show="!authentication.isAuth"><a href="#/login">Login</a></li>
                    <li data-ng-show="authentication.isAuth"><a href="" data-ng-click="logOut()">Logout</a></li>
                    <li data-ng-show="true"> <a href="#/language">Language</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - TaskBook</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>